{% extends 'baseAdmin.html.twig' %}

{% block title %}Produit - formulaire{% endblock title %}

{% block body %}


    {{ form_start(produitForm) }}
        <h2 class="pb-5">Formulaire - Produit</h2>

        
        <!-- Nom -->
        <div class="col-4 my-3">
            {{ form_label(produitForm.nom) }}
            {{ form_widget(produitForm.nom) }}
        </div>

        <!-- Catégorie -->
        <div class="col-4 my-3">
            {{ form_label(produitForm.id_categories) }}
            {{ form_widget(produitForm.id_categories) }}
            <a href="{{ path('categorie_create_popup') }}" 
            class="btn btn-outline-light text-dark"
            target="popup" 
            onclick="window.open('{{ path('categorie_create_popup') }}','popup','width=500,height=400'); return false;">
                + Ajouter une catégorie (beta)
            </a>
        </div>

        <!-- Sous-catégorie -->
        <div class="col-4 my-3">
            {{ form_label(produitForm.id_sous_categories) }}
            {{ form_widget(produitForm.id_sous_categories) }}
            <a href="{{ path('sous_categorie_create_popup') }}" 
            class="btn btn-outline-light text-dark"
            target="popup" 
            onclick="window.open('{{ path('sous_categorie_create_popup') }}','popup','width=500,height=400'); return false;">
                + Ajouter une sous-catégorie (beta)
            </a>
        </div>
        
        <!-- Description -->
        <div class="col-12 my-3">
            {{ form_label(produitForm.description) }}
            {{ form_widget(produitForm.description) }}
        </div>

        <!-- Image -->
        <div class="col-4 my-3">
            {{ form_label(produitForm.img) }}
            {{ form_widget(produitForm.img) }}
            {{ form_help(produitForm.img) }}
        </div>
        
        <!-- Prix -->
        <div class="col-3 my-3">
            {{ form_label(produitForm.prix ) }}
            {{ form_widget(produitForm.prix ) }}
        </div>
        
        <!-- Retour / Validation -->
        <div class="text-right">
            <a href="{{ path('admin_produits') }}" class="btn btn-outline-light text-dark">Retour</a> 
            {{ form_widget(produitForm.valider )}}
        </div>


    {{ form_end(produitForm) }}

{% endblock %}