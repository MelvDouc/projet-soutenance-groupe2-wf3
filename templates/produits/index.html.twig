{% extends 'base.html.twig' %}

{% block title %}Hello ProduitsController!{% endblock %}

{% block body %}


    <div class="cards-container-3 mx-3 mb-5">
            {% for souscatproduit in produits %}
                <div class="card mb-3">
                    <img src="{{ asset('img/produit/') ~ souscatproduit.img }}" alt="Image non disponible." class="card-img-top img-responsive">
                    <div class="card-body">
                        <h2 class="card-title">{{ souscatproduit.nom }}</h2>
                        <p class="card-text mb-4">{{ souscatproduit.description | raw }}</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Prix&thinsp;: {{ souscatproduit.prix }} â‚¬</li>
                    </ul>
                    <div class="text-center bg-success text-center d-flex align-items-center justify-content-center" style="font-weight: bolder;">
                        <a href="{{ path('panier_ajout', {'id': souscatproduit.id }) }}" class="btn text-white" style="font-weight: bolder;">
                            <i class="fas fa-shopping-cart mr-1"></i>
                            Ajouter au panier
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}
